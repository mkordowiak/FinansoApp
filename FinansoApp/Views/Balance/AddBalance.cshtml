@using FinansoApp.ViewModels.Balance
@model AddBalanceViewModel

@{
ViewData["Title"] = "Add Balance";
}

<h1>Add Balance</h1>


<form method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>

    </div>
    <div class="form-group">
        <label for="currency">Currency:</label>
        <select class="form-control" id="Currencies" name="SelectedCurrency" >
            @foreach (var currency in Model.Currencies)
            {
                <option value="@currency.Id">@currency.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="group">Group:</label>
         <select class="form-control" id="Groups" name="SelectedGroup">
            @foreach (var group in Model.Groups)
            {
                <option value="@group.Id">@group.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>

